<%= form_for @roletask, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Roletask</legend>

    <div class="control-group">
      <%= f.label :name %>
        <%= f.text_field :name, :class => 'text_field' %>
    </div>

    <div class="accordion" id="accordionroletask">
      <div class="accordion-group">
        <div class="accordion-heading">
          <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordionroletask" href="#collapsecontent"><%= f.label :content %>
          </a> 
        </div>
        <div id="collapsecontent" class="accordion-body collapse in">
           <div class="accordion-inner">
             <%= f.text_area :content, :class => 'text_area span8' %>
           </div>
         </div>
      </div> 
      <div class="accordion-group">
        <div class="accordion-heading">
          <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordionroletask" href="#collapsemetadata"><%= f.label :metadata %>
          </a> 
        </div>
        <div id="collapsemetadata" class="accordion-body collapse in">
           <div class="accordion-inner">
             <%= f.text_area :metadata, :class => 'text_area span8' %>
           </div>
         </div>
      </div> 
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', roletasks_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
