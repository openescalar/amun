<div class="row">
<div class="accordion span12" id="accordionp">
  <div class="accordion-group">
    <div class="row">
    <div class="accordion-heading">
      <div class="span2 accordion-toggle">
        <b><%=t :name %></b>
      </div>
      <div class="span2 accordion-toggle">
        <b><%=t :entrypoint %></b>
      </div>
      <div class="span2 accordion-toggle">
        <b><%=t :description %></b>
      </div>
      <div class="span2 accordion-toggle">
        <b><%=t :actions %></b>
      </div>
    </div>
    </div>
  </div>
  <% @zones[@start..@stop].each do |zone| %>
  <div class="accordion-group">
    <div class="row">
    <div class="accordion-heading">
      <div class="span2 accordion-toggle">
        <%= zone.name %>
      </div>
      <div class="span2 accordion-toggle">
        <%= zone.entrypoint %>
      </div>
      <div class="span2 accordion-toggle">
        <%= zone.description %>
      </div>
      <div class="span3 accordion-toggle">
        <a class="btn btn-mini btn-info" data-toggle="collapse" data-parent="#accordionp" href="#collapse<%= zone.id %>"><%=t :subzone %></a>
          <%= link_to t(:edit), edit_zone_path(zone), :class => 'btn btn-mini' %>
          <%= link_to t(:destroy), zone_path(zone), :method => :delete, :confirm => t(:areusure), :class => 'btn btn-mini btn-danger' %>
      </div>
    </div>
    </div>
    <div class="row">
      <div class="span12">
        <div id="collapse<%= zone.id %>" class="accordion-body collapse out">
          <div class="accordion-inner">
            <% zone.azones.each do |a| %>
                 <b><%=t :subzone %></b> <%= a.name %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
</div>

