<%= form_for @rule, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Rule</legend>

    <div class="control-group">
      <%= f.label t(:protocol), :class => 'control-label' %>
      <div class="controls">
        <%= select("rule", "protocol", options_for_select([["TCP","TCP"],["UDP","UDP"],["ICMP","ICMP"]]), { :prompt => t(:select) } ) %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label t(:from_port), :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :fromport, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label t(:to_port), :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :toport, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label t(:source), :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :source, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label t(:firewall), :class => 'control-label' %>
      <div class="controls">
        <%= select("rule", "firewall_id", @oeaccount.firewalls.collect {|p| [p.name, p.id] }, { :prompt => t(:select) }) %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t(:cancel), rules_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
