<%= form_for @rule, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Rule</legend>

    <div class="control-group">
      <%= f.label :protocol, :class => 'control-label' %>
      <div class="controls">
        <%= select("rule", "protocol", options_for_select([["TCP","TCP"],["UDP","UDP"],["ICMP","ICMP"]]), { :prompt => 'Select Proto' } ) %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label 'From Port', :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :fromport, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label 'To Port', :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :toport, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :source, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :source, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :firewall_id, :class => 'control-label' %>
      <div class="controls">
        <%= select("rule", "firewall_id", @oeaccount.firewalls.collect {|p| [p.name, p.id] }, { :prompt => 'Select Firewall' }) %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', rules_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
