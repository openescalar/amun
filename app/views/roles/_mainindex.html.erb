<div class="row">
<div class="accordion span12" id="accordionp">
  <div class="accordion-group">
    <div class="row">
    <div class="accordion-heading">
      <div class="span2 accordion-toggle">
        <b>Serial</b>
      </div>
      <div class="span2 accordion-toggle">
        <b>Name</b>
      </div>
      <div class="span2 accordion-toggle">
        <b>Description</b>
      </div>
      <div class="span2 accordion-toggle">
        <b>Actions</b>
      </div>
    </div>
    </div>
  </div>
  <% @roles[@start..@stop].each do |role| %>
  <div class="accordion-group">
    <div class="row">
    <div class="accordion-heading">
      <div class="span2 accordion-toggle">
        <%= link_to role.serial, role_path(role) %>
      </div>
      <div class="span2 accordion-toggle">
        <%= role.name %>
      </div>
      <div class="span2 accordion-toggle">
        <%= role.description %>
      </div>
      <div class="span3 accordion-toggle">
          <a class="btn btn-mini btn-info" data-toggle="collapse" data-parent="#accordionp" href="#collapse<%= role.id %>">Tasks</a>
          <a class="btn btn-mini btn-info" data-toggle="collapse" data-parent="#accordionp" href="#collapse1<%= role.id %>">Servers</a>
          <%= link_to 'Edit', edit_role_path(role), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', role_path(role), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
      </div>
    </div>
    </div>
    <div class="row">
      <div class="span12">
        <div id="collapse<%= role.id %>" class="accordion-body collapse out">
          <div class="accordion-inner">
            <% role.roletasks.each do |r| %>
                 <b>Role Task</b> <%= link_to r.serial, roletask_path(r) %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="span12">
        <div id="collapse1<%= role.id %>" class="accordion-body collapse out">
          <div class="accordion-inner">
            <% role.servers.each do |a| %>
                 <b>Serial</b> <%= link_to a.serial, server_path(a) %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
</div>

