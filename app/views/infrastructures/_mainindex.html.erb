<div class="row">
<div class="accordion span12" id="accordionp">
  <div class="accordion-group">
    <div class="row">
    <div class="accordion-heading">
      <div class="span2 accordion-toggle">
        <b>Serial</b>
      </div>
      <div class="span2 accordion-toggle">
        <b>Name</b>
      </div>
      <div class="span2 accordion-toggle">
        <b>Description</b>
      </div>
      <div class="span2 accordion-toggle">
        <b>Actions</b>
      </div>
    </div>
    </div>
  </div>
  <% @infrastructures[@start..@stop].each do |infra| %>
  <div class="accordion-group">
    <div class="row">
    <div class="accordion-heading">
      <div class="span2 accordion-toggle">
        <%= infra.serial %>
      </div>
      <div class="span2 accordion-toggle">
        <%= infra.name %>
      </div>
      <div class="span2 accordion-toggle">
        <%= infra.description %>
      </div>
      <div class="span3 accordion-toggle">
          <a class="btn btn-mini btn-info" data-toggle="collapse" data-parent="#accordionp" href="#collapse<%= infra.id %>">Properties</a>
          <%= link_to 'Build', '/infrastructures/' + infra.id.to_s + '/build', :method => :post, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-info' %>
          <%= link_to 'Edit', edit_infrastructure_path(infra), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', infrastructure_path(infra), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
      </div>
    </div>
    </div>
    <div class="row">
      <div class="span12">
        <div id="collapse<%= infra.id %>" class="accordion-body collapse out">
          <div class="accordion-inner">
            <% infra.firewalls.each do |f| %>
                 <b>Firewall</b> <%= i.serial %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
</div>

