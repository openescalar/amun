<%= form_for @infrastructure, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Infrastructure</legend>
   
    <% @infrastructure.errors.full_messages.each do |msg| %>
       <div class="alert alert-error">
          <a class="close btn-mini" data-dismiss="alert">x</a>
              <%= msg %>
       </div>
    <% end %>

    <div class="control-group">
      <%= f.label t(:serial), :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :serial, :class => 'text_field', :disabled => true %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :description, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :description, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :definition, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :definition, :class => 'text_area span8' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', infrastructures_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
