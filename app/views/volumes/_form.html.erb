<%= form_for @volume, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Volume</legend>

    <div class="control-group">
      <%= f.label :serial, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :serial, :class => 'text_field', :disabled => true %>
      </div>
    </div>


    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :description, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :description, :class => 'text_field' %>
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :size, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :size, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :zone_id, :class => 'control-label' %>
      <div class="controls">
        <%= select("volume", "zone_id", @oeaccount.zones.collect {|p| [p.name, p.id] }, { :prompt => 'Select Zone' }) %>
      </div>
    </div>

    <div id="zone_select">
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', volumes_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
