<div class="row">
<div class="accordion span12" id="accordionp">
  <div class="accordion-group">
    <div class="row">
    <div class="accordion-heading">
      <div class="span2 accordion-toggle">
        <b><%=t :serial %></b>
      </div>
      <div class="span2 accordion-toggle">
        <b><%=t :name %></b>
      </div>
      <div class="span2 accordion-toggle">
        <b><%=t :description %></b>
      </div>
      <div class="span2 accordion-toggle">
        <b><%=t :actions %></b>
      </div>
    </div>
    </div>
  </div>
  <% @firewalls[@start..@stop].each do |firewall| %>
  <div class="accordion-group">
    <div class="row">
    <div class="accordion-heading">
      <div class="span2 accordion-toggle">
        <%= firewall.serial %>
      </div>
      <div class="span2 accordion-toggle">
        <%= firewall.name %>
      </div>
      <div class="span2 accordion-toggle">
        <%= firewall.description %>
      </div>
      <div class="span3 accordion-toggle">
          <a class="btn btn-mini btn-info" data-toggle="collapse" data-parent="#accordionp" href="#collapse<%= firewall.id %>"><%=t :properties %></a>
          <a class="btn btn-mini btn-info" data-toggle="collapse" data-parent="#accordionp" href="#collapse1<%= firewall.id %>"><%=t :servers %></a>
          <%= link_to 'Destroy', firewall_path(firewall), :method => :delete, :confirm => t(:areusure), :class => 'btn btn-mini btn-danger' %>
      </div>
    </div>
    </div>
    <div class="row">
      <div class="span12">
        <div id="collapse<%= firewall.id %>" class="accordion-body collapse out">
          <div class="accordion-inner">
            <% firewall.rules.each do |f| %>
               <div class="span2"><b><%=t :source %></b> <%= f.source %></div><div class="span2"><b><%=t :from_port %></b> <%= f.fromport %> </div><div class="span2"><b><%=t :to_port %></b> <%= f.toport %></div><div class="span2"> <b><%=t :protocol %></b> <%= f.protocol %></div></br>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="span12">
        <div id="collapse1<%= firewall.id %>" class="accordion-body collapse out">
          <div class="accordion-inner">
            <% firewall.servers.each do |f| %>
               <div class="span2"><b><%=t :serial %></b> <%= link_to f.serial, server_path(f) %></div><br>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
</div>

