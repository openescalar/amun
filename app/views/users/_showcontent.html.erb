<h1>User</h1>
<div class="row">
  <div class="span12">
    <div class="row">
      <div class="span3 well">
        <p>
         <b>Name:</b> <%= @user.name %>
         <br> 
        </p>
        <a  class="btn btn-mini btn-info" data-toggle="collapse" data-target="#properties">More Details</a></br>
        <div id="properties" class="collapse out"> 
          <p>
            <b>Username: </b>
            <%= @user.username %>
          </p>
          <p>
            <b>Email: </b>
            <%= @user.email %>
          </p>
        </div>
      </div>
      <div class="span8 well">
           <% @user.accounts.each do |a| %>
             <b>Account:</b> <%= a.name %> <b>Key:</b> <%= a.key %> <b>Secret:</b> <a href="#" class="btn btn-medium btn-info" rel="popover" data-title="Secret" data-placement="bottom" data-content='<div><%= a.secret %></div>' data-html="true">Click to show secret</a>
           <% end %>
      </div> 
    </div>
  </div>
</div>
