<%= form_for @deployment, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Deployment</legend>

    <div class="control-group">
      <%= f.label t(:serial), :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :serial, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label t(:name), :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label t(:description), :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :description, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label t(:metadata), :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :metadata, :class => 'text_area span6', :rows => 6 %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label t(:workflows), :class => 'control-label' %>
      <div class="controls">
        <%= f.select :workflow_ids,  @oeaccount.workflows.all.collect {|p| [p.name, p.id] }, {}, :multiple => true  %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t(:cancel), deployments_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
