<div class="row">
<div class="accordion span12" id="accordionp">
  <div class="accordion-group">
    <div class="row">
    <div class="accordion-heading">
      <div class="span2 accordion-toggle">
        <b>Serial</b>
      </div>
      <div class="span2 accordion-toggle">
        <b>Name</b>
      </div>
      <div class="span2 accordion-toggle">
        <b>Description</b>
      </div>
      <div class="span2 accordion-toggle">
        <b>Actions</b>
      </div>
    </div>
    </div>
  </div>
  <% @deployments[@start..@stop].each do |deploy| %>
  <div class="accordion-group">
    <div class="row">
    <div class="accordion-heading">
      <div class="span2 accordion-toggle">
        <%= link_to deploy.serial, deployment_path(deploy) %>
      </div>
      <div class="span2 accordion-toggle">
        <%= deploy.name %>
      </div>
      <div class="span2 accordion-toggle">
        <%= deploy.description %>
      </div>
      <div class="span3 accordion-toggle">
        <a class="btn btn-mini btn-info" data-toggle="collapse" data-parent="#accordionp" href="#collapse<%= deploy.id %>">Properties</a>
        <%= link_to "Deploy", { :controller => "deployments", :action => "deploy", :id => deploy.id }, :confirm => "Are you sure?", :class => 'btn btn-mini btn-info', :method => 'post' %>
        <%= link_to 'Edit', edit_deployment_path(deploy), :class => 'btn btn-mini' %>
        <%= link_to 'Destroy', deployment_path(deploy), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
      </div>
    </div>
    </div>
    <div class="row">
      <div class="span12">
        <div id="collapse<%= deploy.id %>" class="accordion-body collapse out">
          <div class="accordion-inner">
              <div class="row">
            <% deploy.workflows.each do |w| %>
                <div class="span2 well">Workflow: <%= w.name %><br>
                  <% w.roletasks.each do |r| %>
                    &nbsp;&nbsp;Task: <%= link_to r.serial, roletask_path(r) %><br>
                  <% end %>
                </div>
            <% end %>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
</div>

