<%= form_for @loadbalancer, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Loadbalancer</legend>

    <div class="control-group">
      <%= f.label :serial, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :serial, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :description, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :description, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :port, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :port, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :serverport, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :serverport, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :protocol, :class => 'control-label' %>
      <div class="controls">
        <%= select("loadbalancer", "protocol", options_for_select(["HTTP","HTTPS","TCP","SSL"])) %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :zone_id, :class => 'control-label' %>
      <div class="controls">
        <%= select("loadbalancer", "zone_id", @oeaccount.zones.collect {|p| [p.name, p.id] }, { :prompt => 'Select Zone' }) %>
      </div>
    </div>
    <div id="zone_select">
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', loadbalancers_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
