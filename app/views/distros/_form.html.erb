<%= form_for @distro, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Distro</legend>

    <div class="control-group">
      <%= f.label :serial, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :serial, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :description, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :description, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :arch, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :arch, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :url, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :url, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :zone_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :zone_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :account_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :account_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', distros_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
