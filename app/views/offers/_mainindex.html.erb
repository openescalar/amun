<div class="row">
<div class="accordion span12" id="accordionp">
  <div class="accordion-group">
    <div class="row">
    <div class="accordion-heading">
      <div class="span2 accordion-toggle">
        <b><%=t :code %></b>
      </div>
      <div class="span2 accordion-toggle">
        <b><%=t :description %></b>
      </div>
      <div class="span2 accordion-toggle">
        <b><%=t :zone %></b>
      </div>
      <div class="span2 accordion-toggle">
        <b><%=t :actions %></b>
      </div>
    </div>
    </div>
  </div>
  <% @offers[@start..@stop].each do |offer| %>
  <div class="accordion-group">
    <div class="row">
    <div class="accordion-heading">
      <div class="span2 accordion-toggle">
        <%= offer.code %>
      </div>
      <div class="span2 accordion-toggle">
        <%= offer.description %>
      </div>
      <div class="span2 accordion-toggle">
        <%= offer.zone.name %>
      </div>
      <div class="span3 accordion-toggle">
        <a class="btn btn-mini btn-info" data-toggle="collapse" data-parent="#accordionp" href="#collapse<%= offer.id %>"><%=t :servers %></a>
          <%= link_to t(:edit), edit_offer_path(offer), :class => 'btn btn-mini' %>
          <%= link_to t(:destroy), offer_path(offer), :method => :delete, :confirm => t(:areusure), :class => 'btn btn-mini btn-danger' %>
      </div>
    </div>
    </div>
    <div class="row">
      <div class="span12">
        <div id="collapse<%= offer.id %>" class="accordion-body collapse out">
          <div class="accordion-inner">
            <% offer.servers.each do |s| %>
                 <b><%=t :server %></b> <%= s.serial %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
</div>

