<h1>Offer</h1>

<p>
  <b>Code</b><br>
  <%= @offer.code %>
</p>

<p>
  <b>Description</b><br>
  <%= @offer.description %>
</p>


<div class="form-actions">
  <%= link_to 'Back', offers_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_offer_path(@offer), :class => 'btn' %>
  <%= link_to 'Delete', offer_path(@offer), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
