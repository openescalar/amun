<%= form_for @vpn, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Vpn</legend>

    <div class="control-group">
      <%= f.label :serial, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :serial, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :description, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :description, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :network, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :network, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :netmask, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :netmask, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :client, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :client, :class => 'number_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', vpns_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
