<%= form_for @account, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Account</legend>

    <div class="control-group">
      <%= f.label t(:key), :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :key, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label t(:secret), :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :secret, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label t(:name), :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label t(:email), :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :email, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label t(:users), :class => 'control-label' %>
      <div class="controls">
        <%= f.select :user_ids,  User.all.collect {|p| [p.name, p.id] }, {}, :multiple => true  %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t(:cancel), accounts_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
