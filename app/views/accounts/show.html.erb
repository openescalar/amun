<h1><%=t :account %></h1>

<p>
  <b><%=t :key %></b><br>
  <%= @account.key %>
</p>

<p>
  <b><%=t :secret %></b><br>
  <%= @account.secret %>
</p>

<p>
  <b><%=t :name %></b><br>
  <%= @account.name %>
</p>

<p>
  <b><%=t :email %></b><br>
  <%= @account.email %>
</p>

<p>
   <b><%=t :users %></b></br>
   <% @account.users.each do |u| %>
    <%= u.username %><br>
   <% end %>
</p>

<div class="form-actions">
  <%= link_to t(:back), accounts_path, :class => 'btn'  %>
  <%= link_to t(:edit), edit_account_path(@account), :class => 'btn' %>
  <%= link_to t(:delete), account_path(@account), :method => 'delete', :confirm => t(:areusure), :class => 'btn btn-danger' %>
</div>
