  <% if offersbyzone.nil? or imagesbyzone.nil? or firewallsbyzone.nil? %>
  <div class = "control-group" >
  </div>
  <% else %>
  <div class="control-group">
    <%= label :keypair, "Key Pair", :class => 'control-label' %>
    <div class="controls">
      <%= select("server", "keypair_id", keypairbyzone.collect{ |p| [p.name, p.id]}, {:prompt => 'Select Keypair' }) %>
    </div>
  </div>
  <div class="control-group">
    <%= label :azone, "Available Zone", :class => 'control-label' %>
    <div class="controls">
      <%= select("server", "azone_id", azonebyzone.collect{ |p| [p.name, p.id]}, {:prompt => 'Select Subzone' }) %>
    </div>
  </div>
  <div class="control-group">
    <%= label :offer, "Offer", :class => 'control-label' %>
    <div class="controls">
      <%= select("server", "offer_id", offersbyzone.collect{ |p| [p.code, p.id] }, { :prompt => 'Select Offer' }) %>
    </div>
  </div>
  <div class="control-group">
    <%= label :image, "Image", :class => 'control-label'  %>
    <div class="controls">
      <%= select("server", "image_id", imagesbyzone.collect{ |p| [p.serial, p.id] }, { :prompt => 'Select Image' }) %>
    </div>
  </div>
  <div class="control-group">
    <%= label :firewall, "Firewall", :class => 'control-label' %>
    <div class="controls">
      <%= select("server", "firewall_id", firewallsbyzone.collect{ |p| [p.name, p.id] }, { :prompt => 'Select Firewall' }) %>
    </div>
  </div>
  <div class="control-group">
    <%= label :loadbalancer, "LoadBalancer", :class => 'control-label' %>
    <div class="controls">
      <%= select("server", "loadbalancer_id", loadbalancersbyzone.collect{ |p| [p.serial, p.id] }, { :prompt => 'Select LoadBalancer' }) %>
    </div>
  </div>
  <% end %>

