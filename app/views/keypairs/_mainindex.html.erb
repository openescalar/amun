<div class="row">
<div class="accordion span12" id="accordionp">
  <div class="accordion-group">
    <div class="row">
    <div class="accordion-heading">
      <div class="span2 accordion-toggle">
        <b><%=t :name %></b>
      </div>
      <div class="span2 accordion-toggle">
        <b><%=t :public %></b>
      </div>
      <div class="span2 accordion-toggle">
        <b><%=t :fingerprint %></b>
      </div>
      <div class="span2 accordion-toggle">
        <b<%=t :private %></b>
      </div>
      <div class="span2 accordion-toggle">
        <b><%=t :actions %></b>
      </div>
    </div>
    </div>
  </div>
  <% @keypairs[@start..@stop].each do |key| %>
  <div class="accordion-group">
    <div class="row">
    <div class="accordion-heading">
      <div class="span2 accordion-toggle">
        <%= link_to key.name, keypair_path(key) %>
      </div>
      <div class="span2 accordion-toggle">
        <a href="#" class="btn btn-mini btn-info" rel="popover" data-title="<%=t :public %>" data-placement="left" data-content="<%= key.public %>" data-html="true"><%=t :show %></a>
      </div>
      <div class="span2 accordion-toggle">
        <%= key.fingerprint %>
      </div>
      <div class="span2 accordion-toggle">
        <%= link_to t(:download), :controller => 'keypairs', :action => 'download', :id => key.id %>
      </div>
      <div class="span2 accordion-toggle">
        <a class="btn btn-mini btn-info" data-toggle="collapse" data-parent="#accordionp" href="#collapse<%= key.id %>"><%=t :zones %></a></br>
          <%= link_to t(:edit), edit_keypair_path(key), :class => 'btn btn-mini' %></br>
          <%= link_to t(:destroy), keypair_path(key), :method => :delete, :confirm => t(:areusure), :class => 'btn btn-mini btn-danger' %>
      </div>
    </div>
    </div>
    <div class="row">
      <div class="span12">
        <div id="collapse<%= key.id %>" class="accordion-body collapse out">
          <div class="accordion-inner">
                 <b><%=t :zone %></b> <%= key.zone.name %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
</div>

